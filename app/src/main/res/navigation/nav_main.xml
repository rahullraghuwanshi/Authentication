<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/notVerifiedFragment"
        android:name="com.rahulraghuwanshi.assignment.presentation.fragment.notverified.NotVerifiedFragment"
        android:label="NotVerifiedFragment"
        tools:layout="@layout/fragment_not_verified"/>
    <fragment
        android:id="@+id/signinFragment"
        android:name="com.rahulraghuwanshi.assignment.presentation.fragment.signin.SigninFragment"
        android:label="SigninFragment"
        tools:layout="@layout/fragment_signin">
        <action
            android:id="@+id/action_signinFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.rahulraghuwanshi.assignment.presentation.fragment.signup.SignupFragment"
        android:label="SignupFragment"
        tools:layout="@layout/fragment_signup">
        <action
            android:id="@+id/action_signupFragment_to_verificationFragment"
            app:destination="@id/verificationFragment" />
    </fragment>
    <fragment
        android:id="@+id/verificationFragment"
        android:name="com.rahulraghuwanshi.assignment.presentation.fragment.verification.VerificationFragment"
        android:label="VerificationFragment"
        tools:layout="@layout/fragment_verification"/>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.rahulraghuwanshi.assignment.presentation.fragment.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_signinFragment"
            app:destination="@id/signinFragment" />
        <action
            android:id="@+id/action_homeFragment_to_notVerifiedFragment"
            app:destination="@id/notVerifiedFragment" />
    </fragment>
</navigation>